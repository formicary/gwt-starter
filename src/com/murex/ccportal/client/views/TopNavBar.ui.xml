<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">Some Portal</a>
          <ul class="nav" ui:field="nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
          <form action="" class="pull-right">
            <g:TextBox styleName="input-small" ui:field="user"/>
            <g:PasswordTextBox styleName="input-small" ui:field="password"/>
            <g:Button styleName="btn" text="Sign in" ui:field="loginButton"/>
          </form>
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>