<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widgets="urn:import:com.murex.ccportal.client.widgets">
  <g:HTMLPanel>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">Some Portal</a>
          <widgets:UnorderedList ui:field="nav" />
          <form action="" class="pull-right">
            <g:TextBox styleName="input-small" ui:field="user"/>
            <g:PasswordTextBox styleName="input-small" ui:field="password"/>
            <g:Button styleName="btn" text="Sign in" ui:field="loginButton"/>
          </form>
        </div>
      </div>
    </div>
    <div id="error-ok" class="modal fade hide">
      <div class="modal-header">
        <h3>Error</h3>
      </div>
      <div class="modal-body">
        <p id="modal-body-text"></p>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn primary">OK</a>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>